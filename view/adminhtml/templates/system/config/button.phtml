<script>
    require([
        'jquery',
        'prototype'
    ], function ($) {

        $('#btn_id').click(function () {
            var params = { storeid: "<?php echo $block->getUrlInterfaceData(); ?>", field2 : "hello2"};
            new Ajax.Request('<?php echo $block->getCustomUrl() ?>', {
                parameters: params,
                loaderArea: false,
                asynchronous: true,
                onCreate: function () {
                    $('#btn_id_response_message').text('');
                },
                onSuccess: function (transport) {
                    var resultText = '';
                    if (transport.status > 200) {
                        resultText = transport.statusText;
                    } else {
                        var response = JSON.parse(transport.responseText);
                        resultText = response.message
                    }
                        location.reload();
                    $('#btn_id_response_message').text(resultText);

                }
            });
        });
    });
</script>

